{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "docs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": { "type": "string", "enum": ["README.md", "PRD.md"] },
          "ops": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["replace_section","append_to_section","upsert_section","replace_block_by_marker"] },
                "heading": { "type": "string" },
                "name": { "type": "string" },
                "level": { "type": "integer" },
                "content": { "type": "string" }
              },
              "required": ["type","content"],
              "additionalProperties": false
            }
          }
        },
        "required": ["path","ops"],
        "additionalProperties": false
      }
    }
  },
  "required": ["docs"],
  "additionalProperties": false
}
